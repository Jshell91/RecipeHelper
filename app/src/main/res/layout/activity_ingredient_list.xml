<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ingredient_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jdev.recipehelper.IngredientList">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerrecipe"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scrollbars="vertical"
        android:layout_width="match_parent"/>

    <Button
        android:text="Nuevo Ingrediente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnnewing"
        android:onClick="newIngredient"
        android:layout_below="@+id/recyclerrecipe"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
