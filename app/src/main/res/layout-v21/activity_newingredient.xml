<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_ingredient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jdev.recipehelper.NewIngredient">

    <TextView
        android:text="Nombre:"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvningname"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintLeft_toLeftOf="@+id/activity_new_ingredient"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_new_ingredient"
        android:layout_marginTop="16dp" />

    <EditText
        android:layout_width="232dp"
        android:layout_height="26dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etningtype"
        app:layout_constraintTop_toTopOf="@+id/activity_new_ingredient"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_new_ingredient"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />
</android.support.constraint.ConstraintLayout>
